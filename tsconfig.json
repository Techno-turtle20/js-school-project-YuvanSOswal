{
  "compilerOptions": {
    "target": "es2021",                         
    "module": "es2020",                       
    "lib": ["dom", "es2021"],                  
    "outDir": "./dist",                        
    "rootDir": "./src",                        
    "strict": true,                            
    "esModuleInterop": true,                   
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true,  
    "declaration": false,                     
    "sourceMap": true                        
  },
  "include": [
    "src/**/*"                               
  ],
  "exclude": [
    "node_modules",                           
    "dist"                                    
  ]
}
